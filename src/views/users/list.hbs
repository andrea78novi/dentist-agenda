<h2>Users List</h2>

<table class="list">
   <thead>
      <tr>
         <th>Actions</th>
         <th>Email</th>
         <th>Type</th>
         <th>First Name</th>
         <th>Last Name</th>
         <th>Gender</th>
         <th>Address</th>
         <th>Phone</th>
      </tr>
   </thead>
   <tbody>
      {{#each users}}
      <tr>
         <td class="actions-column">
            <a href="/users/delete/{{_id}}" title="Delete user {{email}}">Delete</a>
            <a href="/users/edit/{{_id}}" title="Edit user {{email}}">Edit</a>
         </td>
         <td>{{email}}</td>
         <td>{{type}}</td>
         <td>{{firstName}}</td>
         <td>{{lastName}}</td>
         <td>{{gender}}</td>
         <td>{{address}}</td>
         <td>{{phone}}</td>
      </tr>
      {{/each}}
   </tbody>
   <tfoot>
      <tr>
         <td class="list-footer" colspan="8">Number of users: {{users.length}}</td>
      </tr>
   </tfoot>
</table>
